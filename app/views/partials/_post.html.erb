<% title "#{post.title}" %>
<div class="post_body">
    <%=  post.body %>
</div>



<p>
  <%= link_to 'Back', posts_path %> |
		<% if logged_in? %>
			<%= link_to "Edit", edit_post_path(post) %> |
			<%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %> |
		<% end %>
  <%= link_to "View All", posts_path %>
</p>



